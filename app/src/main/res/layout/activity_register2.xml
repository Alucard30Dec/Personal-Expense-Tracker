<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_login_gradient"
    tools:context=".RegisterActivity">

    <!-- Blob tím phủ nền (đồng bộ Login) -->
    <ImageView
        android:layout_width="460dp"
        android:layout_height="460dp"
        android:layout_gravity="top|end"
        android:layout_marginTop="-160dp"
        android:layout_marginEnd="-140dp"
        android:src="@drawable/blob_purple"
        android:alpha="0.18" />

    <ImageView
        android:layout_width="420dp"
        android:layout_height="420dp"
        android:layout_gravity="bottom|start"
        android:layout_marginStart="-140dp"
        android:layout_marginBottom="-140dp"
        android:src="@drawable/blob_purple"
        android:alpha="0.16" />

    <!-- Card nội dung -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="24dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="4dp"
        app:strokeColor="@color/md_sys_color_outline"
        app:strokeWidth="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đăng ký"
                android:textStyle="bold"
                android:textSize="24sp"
                android:textColor="@color/md_sys_color_on_surface"
                android:layout_gravity="center"
                android:layout_marginBottom="16dp" />

            <!-- Username (GIỮ id: usernameEditText) -->
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxBackgroundMode="outline"
                app:boxStrokeColor="@color/md_sys_color_outline">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/usernameEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Tên đăng nhập / Email"
                    android:inputType="textEmailAddress"
                    android:maxLines="1" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Password (GIỮ id: passwordEditText) -->
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:boxBackgroundMode="outline"
                app:boxStrokeColor="@color/md_sys_color_outline"
                app:endIconMode="password_toggle">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/passwordEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Mật khẩu"
                    android:inputType="textPassword"
                    android:maxLines="1" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Confirm Password (GIỮ id: confirmPasswordEditText) -->
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:boxBackgroundMode="outline"
                app:boxStrokeColor="@color/md_sys_color_outline"
                app:endIconMode="password_toggle">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/confirmPasswordEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nhập lại mật khẩu"
                    android:inputType="textPassword"
                    android:maxLines="1" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Nút đăng ký (GIỮ id: registerButton) -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/registerButton"
                style="?attr/materialButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:minHeight="48dp"
                android:text="Đăng ký"
                app:cornerRadius="16dp" />

            <!-- Link quay lại đăng nhập (GIỮ id: loginTextView) -->
            <TextView
                android:id="@+id/loginTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đã có tài khoản? Đăng nhập"
                android:layout_marginTop="16dp"
                android:textColor="@color/brand_primary"
                android:layout_gravity="center_horizontal" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</FrameLayout>
